<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<window>
    <defaultcontrol>202</defaultcontrol>
    <animation effect="fade" time="350">WindowOpen</animation>
    <animation effect="fade" time="350">WindowClose</animation>
    <zorder>2</zorder>
    <backgroundcolor>0xff00ff00</backgroundcolor>
    <coordinates>
        <system>1</system>
        <posx>25</posx>
        <posy>25</posy>
    </coordinates>
    <controls>
        <control type="image" id="1">
            <posy>-25</posy>
            <description>Background</description>
            <width>1235</width>
            <height>715</height>
            <visible>true</visible>
            <colordiffuse>FFFFFFFF</colordiffuse>
            <texture>osd_settings_back_round.png</texture>
        </control>
        <control type="label" id="101">
            <description>Window Title</description>
            <posx>30</posx>
            <posy>0</posy>
            <width>1150</width>
            <height>60</height>
            <visible>true</visible>
            <align>center</align>
            <aligny>center</aligny>
            <font>font28_title</font>
            <textcolor>FFB2D4F5</textcolor>
            <shadowcolor>ff000000</shadowcolor>
        </control>
        <control type="textbox" id="201">
            <description>Log Contents</description>
            <posx>30</posx>
            <posy>60</posy>
            <width>1150</width>
            <height>510</height>
            <align>left</align>
            <visible>true</visible>
            <colordiffuse>FFFFFFFF</colordiffuse>
            <font>font13</font>
            <textcolor>FFFFFFFF</textcolor>
            <pagecontrol>202</pagecontrol>
            <autoscroll delay="3000" time="1000" repeat="10000">!Control.HasFocus(202)</autoscroll>
            <label>Text to display goes here [CR] next line...</label>
        </control>
        <control type="scrollbar" id="202">
            <description>Scrollbar for Log</description>
            <posx>1180</posx>
            <posy>80</posy>
            <width>50</width>
            <height>500</height>
            <visible>true</visible>
            <texturesliderbackground>scrollbarbacklist.png</texturesliderbackground>
            <textureslidernib>scrollbar_nofocus.png</textureslidernib>
            <textureslidernibfocus>scrollbar_focus.png</textureslidernibfocus>
            <texturesliderbar>-</texturesliderbar>
            <texturesliderbarfocus>-</texturesliderbarfocus>
            <pulseonselect>True</pulseonselect>
            <orientation>vertical</orientation>
            <showonepage>false</showonepage>
            <onup>2</onup>
            <ondown>3</ondown>
            <onleft>302</onleft>
            <onright>301</onright>
        </control>
        <control type="group" id="300">
            <description>Button Bar</description>
            <posx>50</posx>
            <posy>310r</posy>
            <width>875</width>
            <control type="button" id="301">
                <description>Trim Button</description>
                <posx>300</posx> <!-- positie verschilt per skin. 300 is goed voor Confluence, maar niet voor de rest -->
                <width>250</width>
                <height>40</height>
                <align>center</align>
                <label>Trim</label>
                <texturenofocus>button-nofocus-solid.png</texturenofocus>
                <onright>302</onright>
                <onleft>202</onleft>
                <onup>201</onup>
                <ondown>201</ondown>
                <onclick>XBMC.RunScript(special://home/addons/script.filecleaner/viewer.py, trim)</onclick>
            </control>
            <control type="button" id="302">
                <description>Clear Button</description>
                <posx>300r</posx> <!-- positie verschilt per skin. 300 is goed voor Confluence, maar niet voor de rest -->
                <width>250</width>
                <height>40</height>
                <align>center</align>
                <label>Clear</label>
                <texturenofocus>button-nofocus-solid.png</texturenofocus>
                <onright>202</onright>
                <onleft>301</onleft>
                <onup>201</onup>
                <ondown>201</ondown>
                <onclick>XBMC.RunScript(special://home/addons/script.filecleaner/viewer.py, clear)</onclick>
            </control>
        </control>
    </controls>
</window>