<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<window>
    <defaultcontrol>202</defaultcontrol>
    <animation effect="fade" time="350">WindowOpen</animation>
    <animation effect="fade" time="350">WindowClose</animation>
    <zorder>1</zorder>
    <controls>
        <control type="image" id="100">
            <description>Background</description>
            <width>1280</width>
            <height>720</height>
            <visible>true</visible>
            <colordiffuse>FF43C6DB</colordiffuse>
            <texture>osd_settings_back_round.png</texture>
        </control>
        <control type="label" id="101">
            <description>Window Title</description>
            <posx>565</posx> <!-- window width / 2 - label width / 2 -->
            <posy>40</posy>
            <width>150</width>
            <height>20</height>
            <aligny>center</aligny>
            <textcolor>FF43C6DB</textcolor>
        </control>
        <control type="textbox" id="201">
            <description>Log Contents</description>
            <posx>30</posx>
            <posy>70</posy>
            <width>1210</width>
            <height>560</height>
            <align>left</align>
            <visible>true</visible>
            <colordiffuse>FFFFFFFF</colordiffuse>
            <font>font13</font>
            <textcolor>CCFFFFFF</textcolor>
            <pagecontrol>202</pagecontrol>
            <autoscroll delay="3000" time="1000" repeat="10000">!Control.HasFocus(202)</autoscroll>
        </control>
        <control type="scrollbar" id="202">
            <description>Scrollbar for Log</description>
            <posx>1220</posx>
            <posy>70</posy>
            <width>50</width>
            <height>560</height>
            <visible>true</visible>
            <texturesliderbackground>scrollbarbacklist.png</texturesliderbackground>
            <textureslidernib>scrollbar_nofocus.png</textureslidernib>
            <textureslidernibfocus>scrollbar_focus.png</textureslidernibfocus>
            <texturesliderbar>-</texturesliderbar>
            <texturesliderbarfocus>-</texturesliderbarfocus>
            <colordiffuse>FF43C6DB</colordiffuse>
            <pulseonselect>True</pulseonselect>
            <orientation>vertical</orientation>
            <showonepage>true</showonepage>
            <onleft>302</onleft>
            <onright>301</onright>
        </control>
        <control type="button" id="301">
            <id>301</id>
            <description>Trim Button</description>
            <posx>320</posx>
            <posy>75r</posy>
            <width>250</width>
            <height>40</height>
            <align>center</align>
            <label>Trim</label>
            <texturenofocus>button-nofocus-solid.png</texturenofocus>
            <colordiffuse>FF43C6DB</colordiffuse>
            <onright>302</onright>
            <onleft>202</onleft>
            <onup>202</onup>
            <ondown>202</ondown>
        </control>
        <control type="button" id="302">
            <id>302</id>
            <description>Clear Button</description>
            <posx>580r</posx>
            <posy>75r</posy>
            <width>250</width>
            <height>40</height>
            <align>center</align>
            <label>Clear</label>
            <texturenofocus>button-nofocus-solid.png</texturenofocus>
            <colordiffuse>FF43C6DB</colordiffuse>
            <onright>202</onright>
            <onleft>301</onleft>
            <onup>202</onup>
            <ondown>202</ondown>
        </control>
    </controls>
</window>